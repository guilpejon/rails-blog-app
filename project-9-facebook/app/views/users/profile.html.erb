<section class="container px-4 px-lg-5 mt-5">
  <h1 class="mb-5">Profile</h1>
  
  <%= form_with(model: @user, url: user_path(@user), method: :patch, class: "row g-3") do |form| %>
    <div class="col-md-4 offset-md-4">
      <div class="text-center">
        <%= image_tag @user.profile_pic, alt: "Profile Picture", class: "mb-3 img-fluid rounded-circle profile-picture" %>
        <%= form.file_field :profile_pic, class: "form-control" %>
      </div>
    </div>
  
    <div class="col-md-6 offset-md-3">
      <%= form.label :name, "Name" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
  
    <div class="col-md-6 offset-md-3">
      <%= form.label :email, "Email" %>
      <%= form.email_field :email, class: "form-control" %>
    </div>
  
    <div class="col-md-6 offset-md-3 text-center">
      <%= form.submit "Update Profile", class: "btn btn-primary" %>
    </div>
  <% end %>
</section>
