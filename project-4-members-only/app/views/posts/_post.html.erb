<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= post.description %>
  </p>

  <p>
    <strong>User:</strong>
    <% if user_signed_in? %>
      <%= post.user.name %>
    <% else %>
      SECRET
    <% end %>
  </p>
</div>
